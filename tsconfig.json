{
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@less/*": ["less/*"],
            "_store/*": ["store/*"],
            "_page/*": ["src/*"],
            "_components/*": ["components/*"]
        },
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true
    }
}